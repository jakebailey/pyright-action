{
    "name": "pyright-action",
    "version": "1.3.0",
    "private": true,
    "description": "GitHub Action for pyright",
    "main": "dist/index.js",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jakebailey/pyright-action.git"
    },
    "author": "Jake Bailey",
    "license": "MIT",
    "engines": {
        "node": ">=16"
    },
    "dependencies": {
        "@actions/core": "^1.8.2",
        "@actions/http-client": "^2.0.1",
        "@actions/tool-cache": "^2.0.1",
        "@badrap/valita": "^0.1.3",
        "semver": "^7.3.7",
        "string-argv": "^0.3.1"
    },
    "devDependencies": {
        "@tsconfig/node16": "^1.0.2",
        "@types/clone": "^2.1.1",
        "@types/jest": "^27.5.1",
        "@types/node": "^16.11.35",
        "@types/semver": "^7.3.9",
        "@types/semver-utils": "^1.1.1",
        "@typescript-eslint/eslint-plugin": "^5.23.0",
        "@typescript-eslint/parser": "^5.23.0",
        "clone": "^2.1.2",
        "esbuild": "^0.14.39",
        "eslint": "^8.15.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "husky": "^8.0.1",
        "jest": "^28.1.0",
        "jest-serializer-path": "^0.1.15",
        "npm-check-updates": "^13.0.0",
        "prettier": "2.6.2",
        "release-it": "^15.0.0",
        "rimraf": "^3.0.2",
        "ts-jest": "^28.0.2",
        "typescript": "~4.6.4"
    },
    "scripts": {
        "postinstall": "husky install",
        "build": "esbuild src/index.ts --bundle --outfile=dist/index.js --platform=node --target=node16",
        "update:all": "npm-check-updates -u && yarn",
        "update:all:transitive": "npm-check-updates -u && rimraf yarn.lock && yarn",
        "release": "release-it",
        "test": "jest"
    },
    "release-it": {
        "git": {
            "commitMessage": "Release v${version}",
            "tagName": "v${version}"
        },
        "npm": {
            "publish": false
        },
        "github": {
            "release": true,
            "releaseName": "v${version}",
            "web": true
        },
        "hooks": {
            "before:init": "yarn test",
            "after:git:release": "git tag -d v1 && git push origin :refs/tags/v1 && git tag v1 && git push origin v1"
        }
    },
    "packageManager": "yarn@3.2.0",
    "volta": {
        "node": "16.15.0"
    }
}
