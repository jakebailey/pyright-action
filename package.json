{
    "name": "pyright-action",
    "version": "1.4.1",
    "private": true,
    "description": "GitHub Action for pyright",
    "main": "dist/index.js",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jakebailey/pyright-action.git"
    },
    "author": "Jake Bailey",
    "license": "MIT",
    "engines": {
        "node": ">=16"
    },
    "dependencies": {
        "@actions/core": "^1.9.1",
        "@actions/http-client": "^2.0.1",
        "@actions/tool-cache": "^2.0.1",
        "@badrap/valita": "^0.1.6",
        "semver": "^7.3.7",
        "string-argv": "^0.3.1"
    },
    "devDependencies": {
        "@tsconfig/node16-strictest": "^1.0.3",
        "@types/jest": "^29.0.0",
        "@types/node": "^16.11.58",
        "@types/semver": "^7.3.12",
        "@types/semver-utils": "^1.1.1",
        "@typescript-eslint/eslint-plugin": "^5.36.2",
        "@typescript-eslint/parser": "^5.36.2",
        "esbuild": "^0.15.7",
        "eslint": "^8.23.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-simple-import-sort": "^8.0.0",
        "husky": "^8.0.1",
        "jest": "^29.0.2",
        "jest-serializer-path": "^0.1.15",
        "klona": "^2.0.5",
        "prettier": "2.7.1",
        "rimraf": "^3.0.2",
        "ts-jest": "^29.0.0",
        "typescript": "~4.8.3"
    },
    "scripts": {
        "postinstall": "husky install",
        "build": "esbuild src/index.ts --bundle --outfile=dist/index.js --platform=node --target=node16",
        "update:all": "yarn dlx npm-check-updates -u && yarn",
        "update:all:transitive": "yarn dlx npm-check-updates -u && rimraf yarn.lock && yarn",
        "release": "yarn dlx release-it",
        "test": "jest"
    },
    "release-it": {
        "git": {
            "commitMessage": "Release v${version}",
            "tagName": "v${version}"
        },
        "npm": {
            "publish": false
        },
        "github": {
            "release": true,
            "releaseName": "v${version}",
            "web": true
        },
        "hooks": {
            "before:init": "yarn test",
            "after:git:release": "git tag -d v1 && git push origin :refs/tags/v1 && git tag v1 && git push origin v1"
        }
    },
    "packageManager": "yarn@3.2.2",
    "volta": {
        "node": "16.15.0"
    }
}
