{
    "name": "pyright-action",
    "version": "3.0.2",
    "private": true,
    "description": "GitHub Action for pyright",
    "main": "dist/index.js",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jakebailey/pyright-action.git"
    },
    "author": "Jake Bailey",
    "license": "MIT",
    "engines": {
        "node": ">= 24"
    },
    "dependencies": {
        "@actions/core": "^3.0.0",
        "@actions/http-client": "~4.0.0",
        "@actions/tool-cache": "^4.0.0",
        "@badrap/valita": "^0.4.6",
        "@iarna/toml": "^2.2.5",
        "semver": "^7.7.4",
        "shell-quote": "^1.8.3",
        "tiny-jsonc": "^1.0.2",
        "which": "^6.0.1"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@tsconfig/node24": "^24.0.4",
        "@tsconfig/strictest": "^2.0.8",
        "@types/node": "^24.10.13",
        "@types/semver": "^7.7.1",
        "@types/shell-quote": "^1.7.5",
        "@types/which": "^3.0.4",
        "@vitest/coverage-v8": "^4.0.18",
        "@vitest/pretty-format": "^4.0.18",
        "dprint": "^0.51.1",
        "esbuild": "^0.27.3",
        "eslint": "^9.39.2",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "eslint-plugin-unicorn": "^63.0.0",
        "globals": "^17.3.0",
        "husky": "^9.1.7",
        "klona": "^2.0.6",
        "path-serializer": "^0.5.1",
        "typescript": "~5.9.3",
        "typescript-eslint": "^8.55.0",
        "vitest": "^4.0.18"
    },
    "scripts": {
        "prepare": "husky",
        "build": "node build.mjs",
        "test": "vitest",
        "test:coverage": "vitest run --coverage"
    },
    "release-it": {
        "git": {
            "commitMessage": "Release v${version}",
            "tagName": "v${version}"
        },
        "npm": {
            "publish": false
        },
        "github": {
            "release": true,
            "releaseName": "v${version}",
            "web": true
        },
        "hooks": {
            "before:init": "pnpm run test --run",
            "after:git:release": "(git tag -d v3 && git push origin :refs/tags/v3) || true && git tag v3 && git push origin v3"
        }
    },
    "packageManager": "pnpm@10.30.1+sha512.3590e550d5384caa39bd5c7c739f72270234b2f6059e13018f975c313b1eb9fefcc09714048765d4d9efe961382c312e624572c0420762bdc5d5940cdf9be73a",
    "pnpm": {
        "overrides": {
            "esbuild": "$esbuild"
        },
        "onlyBuiltDependencies": [
            "dprint",
            "esbuild"
        ]
    }
}
